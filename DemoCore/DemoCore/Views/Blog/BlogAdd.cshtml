@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Blog</h4>
                @using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))


                {
                    <div class="form-group">
                        @Html.Label("Blog Title")
                        @Html.TextBoxFor(x=>x.BlogTitle, new{@class="form-controller", @style="height:60px;width: 600px" })
                        @Html.ValidationMessageFor(x=>x.BlogTitle,"",new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Blog Image")
                        @Html.TextBoxFor(x=>x.BlogImage, new{@class="form-controller", @style="height:60px;width: 600px" })
                        @Html.ValidationMessageFor(x=>x.BlogImage,"",new{@class="text-danger"})
                    </div>

                    <div class="form-group">
                        @Html.Label("Blog ThumbnailImage")
                        @Html.TextBoxFor(x=>x.BlogThumbnailImage, new{@class="form-controller", @style="height:60px;width: 600px" })
                        @Html.ValidationMessageFor(x=>x.BlogThumbnailImage,"",new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Category")
                        @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.cv, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Blog Content")
                        @Html.TextAreaFor(x=>x.BlogContent,3,60, new{@class="form-controller"})
                        @Html.ValidationMessageFor(x=>x.BlogContent,"",new{@class="text-danger"})
                    </div>

                    <button type="submit" class="btn btn-gradient-primary mr-2">Create</button>
                    <button class="btn btn-light">Cancel</button>
                }
            </div>
        </div>
    </div>

</div>



