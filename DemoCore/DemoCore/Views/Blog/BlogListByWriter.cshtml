@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            <div>
                <h4 class="card-title">Blogs Table</h4>
                <a asp-action="BlogAdd" class="btn btn-gradient-info btn-fw">Create</a>

            </div>
          
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th style="margin-left:13px">Action</th>
                      
                    </tr>
                </thead>
              
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BlogID</td>
                            <td>@item.BlogTitle</td>
                            <td>@(((DateTime)item.CreateDate).ToString("dd-MMM-yyyyy"))</td>
                            <td>@item.Category.CategoryName</td>
                            <td>
                                @if (item.BlogStatus)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Passiv</span>
                                }
                            </td>
                            <td>

                                <a href="/Blog/EditBlog/@item.BlogID" class="btn btn-gradient-primary btn-fw">Update</a>
                                <a href="/Blog/DeleteBlogs/@item.BlogID" style="margin-left:3px" class="btn btn-gradient-warning btn-fw">Delete</a>
                            </td>
                           
                        </tr>
                    }
              
                   
                </tbody>
            </table>
        </div>
    </div>
</div>
