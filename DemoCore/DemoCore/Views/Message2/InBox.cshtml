@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div>
                <h4 class="card-title">Blogs Table</h4>
                <a href="" class="btn btn-gradient-primary btn-fw">New Message</a>

            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Subject</th>
                        <th>Sender</th>
                        <th>Date</th>
                        <th>Messsage Open</th>
                        

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MessageID</td>
                            <td>@item.Subject</td>
                            <td>@item.SenderUser.WriterName</td>
                            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyyy"))</td>
                           
                            
                            <td>

                                <a href="/Message2/Message2Detail/@item.MessageID" class="btn btn-gradient-primary btn-fw">Message Open</a>
                            </td>

                        </tr>
                    }
                   


                </tbody>
            </table>
        </div>
    </div>
</div>
